				} ?>
				nome: "required",
				ordine: "required"
			},
			
			messages: {
				
				<? // scelta ente
				if (($datiUser['permessi']==10 or $datiUser['permessi']==3) AND !$id) { 
					echo "id_ente: \"Devi selezionare l'ente per il quale inserire il GECT\",";
				} ?>
				nome: "Devi inserire il nome del GECT",
				ordine: "Devi inserire l'ordine di visualizzazione",
				id_proprietario: "Devi selezionare l'utente proprietario"
			},
			
			highlight: function(label) {
				jQuery(label).closest('.control-group').addClass('error');
			},
			invalidHandler: function() {
				if( validator.numberOfInvalids() ) {
					jQuery('#a_dati_tab').tab('show');
				}
			}

		});
		
		
		
	});
