			<? creaFormTrasp('Tipo di visualizzazione','selezione', 'vista_tabella', '0,1,3', $regola['vista_tabella'], 'Visualizzazione classica,Visualizzazione a tabella,Visualizzazione senza contenitori','input-xxlarge',0,'', 0, 0,true); ?>
