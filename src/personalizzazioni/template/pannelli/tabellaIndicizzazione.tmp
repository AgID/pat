	addBold('aTabellaBandiStandard');
	removeBold('aTabellaBandiDpcm');
}
function showTabellaBandiDpcm() {
	document.getElementById('table_bandi_norma').style.display = 'block';
	document.getElementById('table_bandi_hr').style.display = 'none';
	addBold('aTabellaBandiDpcm');
	removeBold('aTabellaBandiStandard');
}
function addBold(id) {
	if (jQuery) {
		var j = jQuery.noConflict();
		j('#'+id).css('font-weight','bold');
	}
}
function removeBold(id) {
	if (jQuery) {
		var j = jQuery.noConflict();
		j('#'+id).css('font-weight','normal');
	}
}
if (jQuery) {
    var j = jQuery.noConflict();
	j("#aTabellaBandiDpcm").hover(
		function () {
			$(this).css('background-color', '#F0F0F0');
