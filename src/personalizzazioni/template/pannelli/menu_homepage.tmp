// funzione di elaborazione del menu in home
function menuHome($sezioneRiferimento) {
	global $sezioni,$configurazione,$server_url,$tipoEnte,$entePubblicato;

	
	$sezioniEscludo = explode(",",$tipoEnte['sezioni_esclusione']);				

	foreach ($sezioni as $sezione) {
	
		if (!(in_array($sezione['id'], $sezioniEscludo))) {
		
			//CONTROLLO MODULO 'concorsi' per visualizzazione sottosezioni
			if( ($sezione['id'] != 806 AND $sezione['id'] != 807) OR ($sezione['id'] == 806 AND moduloAttivo('concorsi')) OR ($sezione['id'] == 807 AND moduloAttivo('concorsi')) ){
	
				if ($sezione['id'] != 18 AND $sezione['id'] != 712  AND $sezione['id'] != 713  AND $sezione['id'] != 21 AND $sezione['id'] != 639  AND $sezione['id'] != 566 ) {
				
					//PERSONALIZZAZIONE Aziende sanitarie
					if($entePubblicato['tipo_ente']!=17 OR ($entePubblicato['tipo_ente']==17 AND $sezione['id'] != 710)){
						
						if ($sezione['id_riferimento']==$sezioneRiferimento AND $sezione['permessi_lettura']!='HM' AND $sezione['permessi_lettura']!='H') {
							if ($sezione['link'] == '') {
								// verifico se usare le url parlati
								if ($configurazione['url_parlanti']) {
									$strAncora = $server_url."pagina".$sezione['id']."_".pulisciNome($sezione['nome']).".html";
								} else {
									$strAncora = $server_url."index.php?id_sezione=".$sezione['id'];
								}
							} else {
								$strAncora = $sezione['link'];
							}
							echo "<li><a href=\"".$strAncora."\" title=\"Vai alla pagina ".addslashes($sezione['nome'])."\" >".$sezione['nome']."</a></li>\n";
						}
						
					}
					
				}

			}
		}

	}

}

